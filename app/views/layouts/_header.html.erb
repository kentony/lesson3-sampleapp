<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Help",   help_path %></li>
        <!--login? でtrue つまりlogin済の場合 -->
        <% if logged_in? %>
          <!--login? でtrue つまりlogin済の場合 -->
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <!-- ↓　current_user を分解すると、user_path(current_user.id)  -->
              <!-- ↓　GET /users/:id current_user になる -->
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>

              <li class="divider"></li>
              <li>
                <!-- ↓DELETEメソッドを / logout_path にPOST => destroy action が機能する  -->
                <!-- link_to は暗黙的にGETメソッド。なので↓はDELETEメソッドを明示する。  -->
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <!--login? でfalse つまりloginしていない場合 -->
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>